CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME) 

.PHONY: clean
clean:
	$(RM) -f *~ $(NAME)

.PHONY: oclean
oclean: 
	$(RM) -f $(OBJ)

.PHONY: fclean
fclean: clean oclean

.PHONY: oclean
re: oclean all
